<!DOCTYPE html>
<html>
  <head>
    <title><%= t ".title" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "https://use.fontawesome.com/releases/v5.2.0/css/all.css" %>
    <%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application",
      "data-turbolinks-track": "reload" %>
  </head>
  
  <body>
    <%= render "layouts/client/menu" %>
    <%= render "layouts/client/header" %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="col-md-12">
          <%= content_tag :div, class: "alert alert-#{message_type}" do %>
            <% if message.is_a? Array %>
              <%= content_tag :ul do %>
                <% message.each do |m| %>
                  <%= content_tag :li, m %>
                <% end %>
              <% end %>
            <% else %>
              <%= message %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= yield %>
    <footer>
      <div class="footer-btm">
        <p><%= t ".copyright" %></p>
      </div>
    </footer>
  </body>
</html>
