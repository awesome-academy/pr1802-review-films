<table class="table cat-table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t ".title" %></th>
      <th scope="col"><%= t ".film" %></th>
      <th scope="col"><%= t ".action" %></th>
      <th scope="col"><%= t ".created_date" %></th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.id %></td>
        <td><%= link_to review.title, admin_review_path(review) %></td>
        <td><%= link_to review.film.name, admin_film_path(review.film) %></td>
        <td>
          <%= link_to t("edit"), edit_admin_review_path(review) %> |
          <%= link_to t("delete"), admin_review_path(review), method: :delete,
                data: {confirm: t("delete_confirm")} %>
        </td>
        <td><%= review.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @reviews %>
