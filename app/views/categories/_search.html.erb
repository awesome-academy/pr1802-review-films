<%= form_tag category_path, method: :get do %>
  <div class="form-group">
    <h5 class="font-weight-bold"><%= label_tag :search %></h5>
    <div id="search-in-cat">
      <%= text_field_tag :search_params, params[:search_params], class: "form-control input-field" %>
      <%= hidden_field_tag :sort_params, params[:sort_params] %>
      <%= hidden_field_tag :year_params, params[:year_params] %>
      <%= hidden_field_tag :director_params, params[:director_params] %>
      <%= hidden_field_tag :start_date, params[:start_date] %>
      <%= hidden_field_tag :end_date, params[:end_date] %>
      <%= button_tag type: "submit", class: "btn-submit" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  </div>
<% end %>
<br/>
